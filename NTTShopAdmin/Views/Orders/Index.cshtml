@model IEnumerable<NTTShopAdmin.Entities.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pedidos</h2>

<table class="table">
    <tr>
        <th>
            ID Pedido
        </th>
        <th>
            ID Usuario
        </th>
        <th>
            Fecha pedido
        </th>
        <th>
            Estado
        </th>
        <th>
            Precio total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.totalPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { idOrder = item.idOrder }) |
            @Html.ActionLink("Detalles", "Details", new { idOrder = item.idOrder }) |
            @Html.ActionLink("Anular", "Cancel", new { idOrder = item.idOrder })
        </td>
    </tr>
}

</table>
