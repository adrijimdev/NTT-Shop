@model NTTShopAdmin.Entities.Product
@{
    ViewBag.Title = "Create";
}

<h1>Añadir producto</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Products" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" name="name" class="control-label">Nombre</label>
                @Html.TextBox("name")
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" name="description" class="control-label">Descripción</label>
                @Html.TextBox("description")
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stock" name="stock" class="control-label">Stock</label>
                @Html.TextBox("stock")
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input type="submit" value="Añadir producto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" method="GET">Volver a la lista</a>
</div>

